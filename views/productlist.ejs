  <script>

 
    const addToCart = (productId) => {
      console.log("kdfhsdkfhsldfhskdj", productId);
      $.ajax({
        url: '/addtocart',
        method: 'POST',
        data: {
          productid: productId
        },
        success: (response) => {
          console.log("akdfhsdhfjhsgd", response);
          document.getElementById('totalPrice').innerHTML = `₹  ${response.totalPrice}`,
            document.getElementById('cartLength').innerHTML = response.cartLength
          Swal.fire({
            position: 'top-start',
            icon: 'success',
            widtth: '100',
            padding: '1em',
            text: 'Product Added to Cart 🛒',
            showConfirmButton: false,
            timer: 750
          })

        }

      })
    }
    const toastMixin = Swal.mixin({
      toast: true,
      icon: 'success',
      title: 'General Title',
      animation: false,
      position: 'top-right',
      showConfirmButton: false,
      timer: 1500,
      timerProgressBar: true,
      didOpen: (toast) => {
        toast.addEventListener('mouseenter', Swal.stopTimer)
        toast.addEventListener('mouseleave', Swal.resumeTimer)
      }
    });


    const addToWishlist = (productId) => {

      $.ajax(
        {
          url: `/addToWishlist?id=${productId}`,
          method: 'POST',
          success: (res) => {

            if (res.exists) {
              toastMixin.fire({
                title: 'Product is Already in Wishlist',
                icon: 'warning',
                iconColor: '#fff',
                color: '#fff',
                background: '#cc3300',
              });
            } else {
              toastMixin.fire({
                title: "product added to Wishlist🌟",
                icon: 'success',
                iconColor: '#fff',
                color: '#fff',

                background: '#228B22',
              })
            }

          }
        }
      )
    }


  </script>
